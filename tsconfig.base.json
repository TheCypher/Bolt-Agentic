{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@bolt-ai/core": ["packages/core/src/index.ts"],
      "@bolt-ai/agents": ["packages/agents/src/index.ts"],
      "@bolt-ai/tools": ["packages/tools/src/index.ts"],
      "@bolt-ai/next": ["packages/next/src/index.ts"],
      "@bolt-ai/react": ["packages/react/src/index.ts"]
    },
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules", "dist"]
}
